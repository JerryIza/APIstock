<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/oTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_slab"
        android:text="2/21/22 14:00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oEffect"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:fontFamily="@font/roboto_slab_light"
        android:text="Effect: To Close"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/oTime"
        app:layout_constraintTop_toBottomOf="@+id/oTime" />

    <TextView
        android:id="@+id/oSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab"
        android:text="Symbol: T"
        app:layout_constraintEnd_toEndOf="@+id/oSpread"
        app:layout_constraintStart_toEndOf="@+id/oEffect"
        app:layout_constraintTop_toBottomOf="@+id/oSpread" />

    <TextView
        android:id="@+id/oPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab"
        android:text="Limit: 25.00"
        app:layout_constraintEnd_toEndOf="@+id/oSide"
        app:layout_constraintTop_toTopOf="@+id/oEffect" />

    <TextView
        android:id="@+id/oSpread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text="Stock"
        app:layout_constraintEnd_toStartOf="@+id/oSide"
        app:layout_constraintStart_toEndOf="@+id/oEffect"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Sell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oTif"
        android:layout_width="52dp"
        android:layout_height="23dp"
        android:layout_marginEnd="16dp"
        android:text="TIF: GTC"
        app:layout_constraintEnd_toEndOf="@+id/oSymbol"
        app:layout_constraintStart_toStartOf="@+id/oSymbol"
        app:layout_constraintTop_toBottomOf="@+id/oSymbol" />

    <TextView
        android:id="@+id/oMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark: 24.50"
        app:layout_constraintEnd_toEndOf="@+id/oSide"
        app:layout_constraintStart_toStartOf="@+id/oSide"
        app:layout_constraintTop_toBottomOf="@+id/oPrice" />

    <TextView
        android:id="@+id/oStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Working"
        app:layout_constraintStart_toStartOf="@+id/oEffect"
        app:layout_constraintTop_toBottomOf="@+id/oEffect" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height=".5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>