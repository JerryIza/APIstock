<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="80dp">


    <TextView
        android:id="@+id/iSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_slab"
        android:text="/ES"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/iChg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iSymbol"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/iSymbol"
        android:text="Chg: +$30"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/iSymbol"
        app:layout_constraintTop_toTopOf="@+id/iSymbol" />

    <TextView
        android:id="@+id/iLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iChg"
        android:layout_alignStart="@+id/iChg"
        android:layout_alignEnd="@+id/iChg"
        android:layout_marginTop="8dp"
        android:text="Last: $2,276.83"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/iChg"
        app:layout_constraintStart_toStartOf="@+id/iChg"
        app:layout_constraintTop_toBottomOf="@+id/iChg" />


</androidx.constraintlayout.widget.ConstraintLayout>