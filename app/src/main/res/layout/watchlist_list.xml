<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp">

    <TextView
        android:id="@+id/wlSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_slab"
        android:text="AMD"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wlDescription"
        android:layout_width="150dp"
        android:layout_height="14dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/roboto_slab_light"
        android:text="Advaced Micro Devices"
        android:textColor="#FFC107"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/wlLast"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/wlSymbol"
        app:layout_constraintTop_toBottomOf="@+id/wlSymbol" />

    <TextView
        android:id="@+id/wlLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/roboto_slab"
        android:text=" $70.50"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/divider"
        app:layout_constraintTop_toTopOf="@+id/wlSymbol" />

    <TextView
        android:id="@+id/wlNetChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$2.0"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/wlLast"
        app:layout_constraintStart_toStartOf="@+id/wlLast"
        app:layout_constraintTop_toBottomOf="@+id/wlLast" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#676767"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wlDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>